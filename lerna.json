{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "allowBranch": "main"
    },
    "publishConfig": {
      "access": "public"
    },
    "fetch-build": "cd ../fetch && yarn && cd ../client && yarn && cd ../core && yarn"
  },
  "version": "0.4.7"
}
